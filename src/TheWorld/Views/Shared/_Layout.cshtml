
<!DOCTYPE html>
<html>
<head>
    <title>The World - @ViewBag.Title</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>

    <div id="sidebar">
        <img src="/img/1.jpg" alt="headshot" class="headshot" />
        <span id="username">Sam Hastings</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>

    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle">Toggle Menu</button>
            </div>
            @RenderBody()
        </div>
    </div>

    <div id="footer">
        &copy; 2015 The World Ltd.
    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js">
    </script>
    @RenderSection("scripts",false)
    <script src="~/js/site.js">

    </script>
</body>
</html>